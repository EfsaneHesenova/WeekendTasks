@using EmployeeMVC.Models;
@model Service;
<a type="button" class="btn btn-success mb-3" asp-area="Admin" asp-controller="Service" asp-action="Create">Create Slider</a>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>



    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>IsActive</th>
                        <th scope="col">Image</th>
                    </tr>
                </thead>
                <tfoot>
                    
                        <tr>
                            <th>@Model.Id</th>
                            <th>@Model.Title</th>
                            <th>@Model.Description</th>
                            <td>@Model.IsActive</td>>
                            @foreach (var servicePhoto in @Model.ServicePhotos ?? new List<ServicePhoto>())
                            {
                                <td><img src="~/download/ServiceImages/@servicePhoto.ImageUrl" width="50" /></td>
                            }
                            <td><a class="btn btn-primary" asp-controller="Service" asp-action="Index" asp-route-id="@Model.Id" asp-area="Admin">Go Back</a></td>
                        </tr>
                    }

                </tfoot>


            </table>
        </div>
    </div>
</div>

<!-- /.container-fluid -->
