@using EmployeeMVC.Models;
@model IEnumerable<Order>;
<a type="button" class="btn btn-success mb-3" asp-area="Admin" asp-controller="Order" asp-action="Create">Create Slider</a>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>



    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>ClientName</th>
                        <th>ClientSurname</th>
                        <th>ClientPhoneNumber</th>
                        <th>ClientEmail</th>
                        <th>ServiceId</th>
                        <th>MasterId</th>
                        <th>Problem</th>
                        <th>IsActive</th>
                    </tr>
                </thead>
                <tfoot>
                    @foreach (Order item in @Model)
                    {
                        <tr>
                            <th>@item.Id</th>
                            <th>@item.ClientName</th>
                            <th>@item.ClientSurname</th>
                            <td>@item.ClientPhoneNumber</td>>
                            <td>@item.ClientEmail</td>>
                            <td>@item.ServiceId</td>>
                            <td>@item.MasterId</td>>
                            <td>@item.Problem</td>>
                            <td>@item.IsActive</td>>
                            <td><a class="btn btn-primary" asp-controller="Order" asp-action="Update" asp-route-id="@item.Id" asp-area="Admin">Update</a></td>
                            <td><a class="btn btn-danger" asp-controller="Order" asp-action="Delete" asp-route-id="@item.Id" asp-area="Admin">Delete</a></td>
                        </tr>
                    }

                </tfoot>


            </table>
        </div>
    </div>
</div>

<!-- /.container-fluid -->
